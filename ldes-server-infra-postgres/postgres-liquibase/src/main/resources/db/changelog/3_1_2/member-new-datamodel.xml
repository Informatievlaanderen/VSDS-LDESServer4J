<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet author="vsds" id="member-new-datamodel">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="members"/>
            </not>
        </preConditions>
        <createTable tableName="members">
            <column name="id" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="members_pkey"/>
            </column>
            <column name="subject" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="collection_id" type="VARCHAR(255)">
                <constraints nullable="false" foreignKeyName="fk_collection_id" references="collections(id)"/>
            </column>
            <column name="is_in_event_source" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="model" type="BYTEA">
                <constraints nullable="false"/>
            </column>
            <column name="sequence_nr" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="timestamp" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="transaction_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="version_of" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="member" cascadeConstraints="true" />
        </rollback>
    </changeSet>
    <changeSet id="migrate_members" author="vsds">
        <preConditions>
            <tableExists tableName="members"/>
        </preConditions>
        <sqlFile path="db/changelog/3_1_2/migrate-members.sql"/>
        <rollback>
            <delete tableName="collections"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
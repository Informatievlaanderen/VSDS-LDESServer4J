<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="drop-2.x-tables-with-cascade" author="vsds">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="fetch_allocation"/>
            <tableExists tableName="fragmentation_bucketisation"/>
            <tableExists tableName="fragmentation_fragment"/>
            <tableExists tableName="fragmentation_fragment_relations"/>
            <tableExists tableName="fragmentation_sequence"/>
            <tableExists tableName="retention_member_properties"/>
            <tableExists tableName="retention_member_views"/>
        </preConditions>
        <dropTable cascadeConstraints="true" tableName="fetch_allocation"/>
        <dropTable cascadeConstraints="true" tableName="fragmentation_bucketisation"/>
        <dropTable cascadeConstraints="true" tableName="fragmentation_fragment"/>
        <dropTable cascadeConstraints="true" tableName="fragmentation_fragment_relations"/>
        <dropTable cascadeConstraints="true" tableName="fragmentation_sequence"/>
        <dropTable cascadeConstraints="true" tableName="retention_member_properties"/>
        <dropTable cascadeConstraints="true" tableName="retention_member_views"/>
    </changeSet>
</databaseChangeLog>
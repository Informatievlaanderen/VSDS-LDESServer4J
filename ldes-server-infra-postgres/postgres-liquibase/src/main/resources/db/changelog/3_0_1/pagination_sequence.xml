<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet author="vsds" id="pagination-init">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="pagination_sequence"/>
            </not>
        </preConditions>
        <createTable tableName="fragmentation_sequence">
            <column name="view_name" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pagination_sequence_pkey"/>
            </column>
            <column name="last_processed_sequence" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>